<div class="login">
<h3>Edit Your Profile</h3>
  <form method="POST" action="/users/<%=@user.slug%>">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
      <p>Username<br><input type="text" name="username" id="username" value="<%= @user.username %>"><br></p>
      <p>Password<br><input type="password" name="password" id="password" value="<%= @user.password %>"><br></p>
    <input type="submit" value="submit">
  </form>
</div>
